<rxui:ReactiveUserControl xmlns="https://github.com/avaloniaui"
			 x:TypeArguments="vm:Components.SessionBoxControlsViewModel"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
			 xmlns:rxui="http://reactiveui.net"
             xmlns:vm="clr-namespace:KC.Frontend.Client.ViewModels"
             x:Class="KC.Frontend.Client.Views.Components.SessionBoxControlsView"
			 d:DesignHeight="80" d:DesignWidth="400">
	
	<Grid RowDefinitions="*,*" ColumnDefinitions="*,*,*,*">

		<TextBlock 
			Grid.ColumnSpan="4" 
			Text="Controls" 
			TextAlignment="Center" FontSize="24" Foreground="White"/>
		<Button x:Name="HitButton" Grid.Row="1"
		        Grid.Column="0"
		        HorizontalAlignment="Center"
		        Width="80"
		        HorizontalContentAlignment="Center" Foreground="White">Hit</Button>
		<Button x:Name="StandButton" Grid.Row="1"
		 		Grid.Column="1"
		 		HorizontalAlignment="Center"
			    Width="80"
			    HorizontalContentAlignment="Center" Foreground="White">Stand</Button>
		<Button x:Name="DoubleButton" Grid.Row="1"
		 		Grid.Column="2"
		 		HorizontalAlignment="Center"
			    Width="80"
			    HorizontalContentAlignment="Center" Foreground="White">Double</Button>
		<Button x:Name="SplitButton" Grid.Row="1"
		 		Grid.Column="3"
		 		HorizontalAlignment="Center"
			    Width="80"
			    HorizontalContentAlignment="Center" Foreground="White">Split</Button>
	</Grid>
	
</rxui:ReactiveUserControl>


